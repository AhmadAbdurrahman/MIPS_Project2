# program: 1000 char string
# N = 31
# M = 21

.data
user_string: .space 1001
error: .asciiz "Not Recognized"
.text

main:

li $v0, 8
la $a0, user_string   
li $a1, 1001
syscall
la $s0, user_string

jal strlength
addi $s1, $v0, 0
addi $s2, $v1, 0

move $a0,$s1
move $a1, $s0
jal removeleadspace
move $s0,$v0

move $a0,$s2
addi $a1, $s1, 0
jal removeendspace
addi $s2, $v0, 0

bgt $s1,4, invalidchars
addi $a0,$s1, 0
move $a1, $s0
li $a2, 31

jal string2deci
move $s3,$v0
li $v0,1
addi $a0,$s3,0
syscall

j exit

string2deci:
li $t0, 0
li $v0,0

loop:
lb $t1,0($a1)
beq $t0,$a0,validchars

if09:
li $t2,'0'
li $t3, '9'
blt $t1, $t2,invalidchars
bgt $t1, $t3, ifAU

sub $t1, $t1,$t2
sub $t4,$a0,$t0
li $t5, 1

exp09:
beq $t4,1, else09
mul $t5,$t5,$a2
addi $t4,$t4, -1
j exp09

else09:
mul $t5,$t5,$t1
add $v0,$v0,$t5
addi $a1,$a1,1
addi $t0,$t0,1
j loop

ifAU:
li $t2, 'A'
li $t3,'U'
blt $t1,$t2,invalidchars
bgt $t1,$t3,ifau

addi $t1,$t1, -55
sub $t4,$a0,$t0
li $t5,1

expAU:
beq $t4,1,elseAU
mul $t5,$t5,$a2
addi $t4,$t4, -1
j expAU

elseAU:
mul $t5,$t5,$t1
add $v0,$v0,$t5
addi $a1,$a1,1
addi $t0,$t0,1
j loop

ifau:
li $t2,'a'
li $t3,'u'
blt $t1,$t2,invalidchars
bgt $t1,$t3, invalidchars

addi $t1,$t1, -87
sub $t4,$a0,$t0
li $t5,1